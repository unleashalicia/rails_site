<%= form_for(@portfolio_item) do |f| %>
  <div class='row'>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6"

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <div class="col-md-12">
      <h2>Technologies Used:</h2>
      <div class="form-group">
        <%= f.fields_for :technologies do |technologies_form| %>
        <div>
          <%= technologies_form.label :name %>
          <%= technologies_form.text_field :name, class: 'form-control' %>
        </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>


<% end %>